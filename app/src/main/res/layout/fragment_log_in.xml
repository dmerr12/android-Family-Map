<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.com.familymap.UI.LogIn">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:horizontalSpacing="0dp"
        android:rowCount="7"
        android:useDefaultMargins="false"
        android:verticalSpacing="0dp">

        <TextView
            android:id="@+id/streetTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Server Host: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/serverHostEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="290dp" />

        <TextView
            android:id="@+id/cityTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Server Port: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/serverPortEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="290dp" />

        <TextView
            android:id="@+id/stateTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="User Name: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="291dp" />

        <TextView
            android:id="@+id/zipCodeTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Password: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="291dp" />

        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="First Name: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="291dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Last Name: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="291dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Email: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="291dp" />


    </GridLayout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genderGroup"
        android:orientation="vertical">
        <RadioButton android:id="@+id/maleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/femaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Log in" />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Register" />
</LinearLayout>
